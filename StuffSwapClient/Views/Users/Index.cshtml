@{
  Layout = "_Layout";
}
@using StuffSwapClient.Models;

<div class="text-center">

  <hr>
  <h1>List of Current Users:</h1>

  @if (ViewBag.Users == null || ViewBag.Users.Count == 0)
  {
    <h3>No user have signed up yet.</h3>
  }
  else
  {
    <h3> * Click on the user's name to see their profile *</h3>
    
      @foreach (User user in ViewBag.Users)
      {
      <p>@Html.ActionLink($"{user.UserName}", "Details", "Users", new { id = user.UserId }, null)</p>
      }
    
  }